{
  "root": true,
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "jasmine": true,
    "browser": true,
    "jquery": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "max-len": [
      2,
      120,
      2
    ],
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [
      "error",
      "multi-line"
    ],
    "no-shadow": [
      "error",
      {
        "allow": [
          "req",
          "res",
          "err"
        ]
      }
    ],
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": true,
        "requireReturnType": true,
        "requireParamDescription": false,
        "requireReturnDescription": true
      }
    ],
    "global-require": "off",
    "Require-jsdoc": "off",
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": "off",
    "arrow-body-style": "off"
  },
  "settings": {
    "import/resolver": "webpack"
  }
}