        "tags": [
          "Centers"
        ],
        "summary": "Creates a new event center",
        "operationId": "CenterController.addCenter",
        "produces": [
          "application/json"
        ],
        "parameters": [
          { 
            "name": "image1",
            "in": "formData",
            "description": "Image for the center to be modified.",
            "required": true,
            "type": "file"
          },
          { 
            "name": "image2",
            "in": "formData",
            "description": "Image for the center to be modified.",
            "required": false,
            "type": "file"
          },
          { 
            "name": "image3",
            "in": "formData",
            "description": "Image for the center to be modified.",
